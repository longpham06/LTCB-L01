// TÃ­nh S=1+1/2!+1/3!+...+1/N!
#include <stdio.h>

double sumFactorial(int n) {
    double sum = 1.0;
    double fact = 1.0;

    int i;
	for ( i = 2; i <= n; i++) {
        fact *= i;
        sum += 1.0 / fact;
    }

    return sum;
}

int main() {
    int n;
    printf("Nhap n: ");
    scanf("%d", &n);

    printf("Tong S = %.5lf\n", sumFactorial(n));
    return 0;
}
